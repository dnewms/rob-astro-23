---
import Layout from '../../../layouts/MainLayout.astro';
import Breadcrumbs from "../../../components/Breadcrumbs.astro";
import PageTitle from "../../../components/PageTitle.astro";
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import featureImage from '../../../images/featured-images/about-facilities.jpg';
import backgroundImage from '../../../images/facilities/north-campus-map2.jpg';
import nightBuildingImage from '../../../images/facilities/ford-robotics-building-at-night.jpg';
import dayBuildingImage from '../../../images/facilities/ford-robotics-building-day.jpg';
import mairNight from '../../../images/facilities/m-air-night.jpg';
import mairDay from '../../../images/facilities/m-air-fall.jpg';
import Link from '../../../components/Link.astro';
---
<Layout title="Facilities">
    <Breadcrumbs />
    <PageTitle title="Facilities" />
    
    <div class="mt-4 mb-4 max-w-6xl w-11/12 mx-auto">

		<!-- desktop view with map-->
        <div class="hidden lg:block relative w-full rounded-lg shadow-lg mt-8 aspect-[1791/1114]">
            <Image
                src={backgroundImage}
                alt="North Campus Map"
                class="absolute inset-0 w-full h-full rounded-lg object-contain"
                loading="eager"
            />
			<div class="absolute top-[3%] left-[2%]">
				<h2 class="text-maize bg-umichblue p-2 rounded-sm text-xl font-bold">University of Michigan<br><span class="italic text-white">North Campus</span></h2>
			</div>
            <div class="absolute w-64 facility-card lg:-top-[2%] min-[1100px]:top-[0%] min-[1150px]:top-[4%] xl:top-[5%] lg:left-[28%] transition-all">
                <Link href={`/about/facilities/ford-robotics-building`} class="block relative group">
                    <svg class="absolute -bottom-6 rotate-180 left-[205px] w-12 h-12 text-white transition-all group-hover:scale-105" viewBox="0 0 24 24">
                        <path fill="currentColor" d="M12 2L1 21h22L12 2z"/>
                    </svg>
                    <div class="bg-white rounded-lg p-4 transition-all group-hover:scale-105">
                        <div class="hidden dark:block relative h-28 -mt-4 -mx-4 mb-3 overflow-hidden rounded-t-lg">
                            <Image 
                                src={nightBuildingImage} 
                                alt="Ford Robotics Building at night" 
                                class="w-full h-full object-cover transition-all"
                                loading="eager"
                            />
                        </div>
						<div class="block dark:hidden relative h-28 -mt-4 -mx-4 mb-3 overflow-hidden rounded-t-lg">
                            <Image 
                                src={dayBuildingImage} 
                                alt="Ford Robotics Building at night" 
                                class="w-full h-full object-cover transition-all"
                                loading="eager"
                            />
                        </div>
                        <h2 class="text-lg font-bold text-umichblue mb-1">Ford Robotics Building</h2>
                        <p class="text-sm mb-2 dark:text-gray-700">A 134,000-square-foot complex with world-class robotics research facilities, including a three-story fly zone and Mars Yard.</p>
                        <span class="text-arboretumBlue hover:underline">Learn more →</span>
                    </div>
                </Link>
            </div>

            <div class="absolute lg:-bottom-[6%] lg:left-[28%] min-[1050px]:-bottom-[5%] min-[1070px]:-bottom-[4%] min-[1100px]:-bottom-[3%] min-[1100px]:left-[30%] min-[1125px]:-bottom-[1%] min-[1150px]:bottom-[2%] min-[1150px]:left-[31%] xl:left-[31%] w-64">
                <Link href={`/about/facilities/m-air`} class="block relative group">
                    <svg class="absolute -top-6 left-[130px] w-12 h-12 text-white transition-transform group-hover:scale-105" viewBox="0 0 24 24">
                        <path fill="currentColor" d="M12 2L1 21h22L12 2z"/>
                    </svg>
                    <div class="bg-white rounded-lg p-4 transition-all group-hover:scale-105">
                        <div class="hidden dark:block relative h-28 -mt-4 -mx-4 mb-3 overflow-hidden rounded-t-lg">
                            <Image 
                                src={mairNight} 
                                alt="M-Air at night" 
                                class="w-full h-full object-cover transition-all"
                                loading="eager"
                            />
                        </div>
						<div class="block dark:hidden relative h-28 -mt-4 -mx-4 mb-3 overflow-hidden rounded-t-lg">
                            <Image 
                                src={mairDay} 
                                alt="M-Air in the Fall" 
                                class="w-full h-full object-cover transition-all"
                                loading="eager"
                            />
                        </div>
                        <h2 class="text-lg font-bold text-umichblue mb-1">M-Air</h2>
                        <p class="text-sm mb-2 dark:text-gray-700">A 10,000 sq ft netted facility for testing aerial vehicles in all Michigan weather conditions.</p>
                        <span class="text-arboretumBlue hover:underline">Learn more →</span>
                    </div>
                </Link>
            </div>

			<div class="absolute lg:top-[41%] lg:left-[58%] min-[1100px]:top-[42%] min-[1100px]:left-[57%] min-[1150px]:top-[42%] min-[1150px]:left-[57%] xl:top-[43%] xl:left-[56%] w-64">
			<a href="https://teamprojects.engin.umich.edu/makerspace-about" class="block relative group">
                    <svg class="absolute rotate-[270deg] -left-[35px] top-[20px] w-12 h-12 text-white transition-transform group-hover:scale-105" viewBox="0 0 24 24">
                        <path fill="currentColor" d="M12 2L1 21h22L12 2z"/>
                    </svg>
                    <div class="bg-white rounded-lg p-4 transition-all group-hover:scale-105">
                        <h2 class="text-lg font-bold text-umichblue mb-1">Makerspace</h2>
                        <p class="text-sm mb-2 dark:text-gray-700">State-of-the-art fabrication facilities with CNC machines, 3D printers, and electronics workstations.</p>
                        <span class="text-arboretumBlue hover:underline">Learn more 
                            <Icon name="mdi:open-in-new" class="inline w-4 h-4 ml-1" /></span>
                    </div>
                </a>
            </div>

            <div class="absolute lg:top-[10%] lg:right-[6%] xl:top-[10%] xl:right-[6%] w-64">
                <a href="https://mcity.umich.edu" class="block relative group">
                    <svg class="absolute -top-6 left-[180px] w-12 h-12 text-white transition-transform group-hover:scale-105" viewBox="0 0 24 24">
                        <path fill="currentColor" d="M12 2L1 21h22L12 2z"/>
                    </svg>
                    <div class="bg-white rounded-lg p-4 transition-all group-hover:scale-105">
                        <h2 class="text-lg font-bold text-umichblue mb-1">Mcity</h2>
                        <p class="text-sm mb-2 dark:text-gray-700">World's first purpose-built proving ground for testing autonomous and connected vehicles.</p>
                        <span class="text-arboretumBlue hover:underline">Learn more 
                            <Icon name="mdi:open-in-new" class="inline w-4 h-4 ml-1" /></span>
                    </div>
                </a>
            </div>
            <div class="absolute lg:bottom-[10%] lg:left-[.5%] xl:bottom-[8%] xl:left-[5%] w-64">
                <a href="https://www.engin.umich.edu/research/labs-facilities/" class="block relative group">
                    <svg class="absolute lg:rotate-[60deg] lg:-bottom-[20px] lg:left-[75px] xl:left-[50px] w-12 h-12 text-white transition-transform group-hover:scale-105" viewBox="0 0 24 24">
					<path fill="currentColor" d="M12 2L1 21h22L12 2z"/>
                    </svg>
                    <div class="bg-white rounded-lg p-4 transition-all group-hover:scale-105">
                        <h2 class="text-lg font-bold text-umichblue mb-1">And other U-M facilities</h2>
                        <p class="text-sm mb-2 dark:text-gray-700">World-class facilities including the Lurie Nanofabrication Facility, wind tunnels, water test tank, and more.</p>
                        <span class="text-arboretumBlue hover:underline">Learn more 
                            <Icon name="mdi:open-in-new" class="inline w-4 h-4 ml-1" /></span>
                    </div>
                </a>
            </div>
        </div>
		<!-- mobile view without map-->
        <div class="lg:hidden grid grid-cols-1 md:grid-cols-2 gap-6 mt-8">
            <Link href={`/about/facilities/ford-robotics-building`} class="block">
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6 hover:shadow-xl border border-gray-200 dark:border-gray-700">
					<div class="hidden dark:block relative h-28 -mt-4 -mx-4 mb-3 overflow-hidden">
						<Image 
							src={nightBuildingImage} 
							alt="Ford Robotics Building at night" 
							class="w-full h-full object-cover transition-all"
							loading="eager"
						/>
					</div>
					<div class="block dark:hidden relative h-28 -mt-4 -mx-4 mb-3 overflow-hidden">
						<Image 
							src={dayBuildingImage} 
							alt="Ford Robotics Building at night" 
							class="w-full h-full object-cover transition-all"
							loading="eager"
						/>
					</div>
                    <h2 class="text-xl font-bold text-umichblue dark:text-white mb-2">Ford Robotics Building</h2>
                    <p class="text-sm mb-4 text-gray-700 dark:text-gray-300">A 134,000-square-foot complex with world-class robotics research facilities, including a three-story fly zone and Mars Yard.</p>
                    <span class="text-arboretumBlue hover:underline dark:text-blue-400">Learn more →</span>
                </div>
            </Link>

            <Link href={`/about/facilities/m-air`} class="block">
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6 hover:shadow-xl border border-gray-200 dark:border-gray-700">
                    <div class="hidden dark:block relative h-28 -mt-4 -mx-4 mb-3 overflow-hidden">
						<Image 
							src={mairNight} 
							alt="M-Air at night" 
							class="w-full h-full object-cover transition-all"
							loading="eager"
						/>
					</div>
					<div class="block dark:hidden relative h-28 -mt-4 -mx-4 mb-3 overflow-hidden">
						<Image 
							src={mairDay} 
							alt="M-Air in the Fall" 
							class="w-full h-full object-cover transition-all"
							loading="eager"
						/>
					</div>
                    <h2 class="text-xl font-bold text-umichblue dark:text-white mb-2">M-Air</h2>
                    <p class="text-sm mb-4 text-gray-700 dark:text-gray-300">A 10,000 sq ft netted facility for testing aerial vehicles in all Michigan weather conditions.</p>
                    <span class="text-arboretumBlue hover:underline dark:text-blue-400">Learn more →</span>
                </div>
            </Link>

            <a href="https://makerspace.engin.umich.edu/" class="block">
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6 hover:shadow-xl border border-gray-200 dark:border-gray-700">
                    <h2 class="text-xl font-bold text-umichblue dark:text-white mb-2">Makerspace</h2>
                    <p class="text-sm mb-4 text-gray-700 dark:text-gray-300">State-of-the-art fabrication facilities with CNC machines, 3D printers, and electronics workstations.</p>
                    <span class="text-arboretumBlue hover:underline dark:text-blue-400">Learn more →</span>
                </div>
            </a>

            <a href="https://mcity.umich.edu" class="block">
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6 hover:shadow-xl border border-gray-200 dark:border-gray-700">
                    <h2 class="text-xl font-bold text-umichblue dark:text-white mb-2">Mcity</h2>
                    <p class="text-sm mb-4 text-gray-700 dark:text-gray-300">World's first purpose-built proving ground for testing autonomous and connected vehicles.</p>
                    <span class="text-arboretumBlue hover:underline dark:text-blue-400">Learn more →</span>
                </div>
            </a>
                <a href="https://www.engin.umich.edu/research/labs-facilities/" class="block">
                    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6 hover:shadow-xl border border-gray-200 dark:border-gray-700">
                        <h2 class="text-xl font-bold text-umichblue dark:text-white mb-2">Other Engineering Facilities</h2>
                        <p class="text-sm mb-4 text-gray-700 dark:text-gray-300">Access world-class facilities including the Lurie Nanofabrication Facility, wind tunnels, water test tank, and more.</p>
                        <span class="text-arboretumBlue hover:underline dark:text-blue-400">Learn more 
                            <Icon name="mdi:open-in-new" class="inline w-4 h-4 ml-1" /></span>
                    </div>
                </a>
        </div>
    </div>
</Layout>
