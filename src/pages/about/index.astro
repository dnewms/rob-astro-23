---
import MainLayout from "../../layouts/MainLayout.astro";
import { Icon } from "astro-icon/components";
import { YouTube } from '@astro-community/astro-embed-youtube';
import Breadcrumbs from "../../components/Breadcrumbs.astro";
import PageTitle from "../../components/PageTitle.astro";
import { Image } from "astro:assets";
import { getCollection } from 'astro:content';
import { getFacultyData, getProfileImagePath } from '../../lib/googleSheets';
import { getFacultyData as oldGetFacultyData } from "../../lib/googleSheets";

const images = import.meta.glob('/src/images/profile-images/*.{png,jpg,jpeg,gif,webp}');
const robotProfile = await import('../../images/profile-images/robot-profile.jpg');

const facultyMembers = await getFacultyData();
const facultyPhotoLookup = Object.fromEntries(
  facultyMembers.map(f => [f.fullName, getProfileImagePath(f)])
);

const getProfileImage = async (imagePath: string) => {
  const imageLoader = images[imagePath];
  if (imageLoader) {
    const image = await imageLoader();
    return image.default;
  }
  return robotProfile.default;
};

interface ExcomMember {
  name: string;
  role?: string;
  isExOfficio: boolean;
  photoURL?: any; // Using any here since the image type is complex
}

const excom = await Promise.all([
  {
    name: "Dawn Tilbury",
    role: "Department Chair",
    isExOfficio: true
  },
  {
    name: "Robert Gregg",
    isExOfficio: false
  },
  {
    name: "Jessy Grizzle",
    isExOfficio: false
  },
  {
    name: "Brent Gillespie",
    role: "Associate Director of Graduate Studies",
    isExOfficio: false
  },
  {
    name: "Mark Draelos",
    isExOfficio: false
  },
  {
    name: "Leia Stirling",
    role: "Associate Director of Undergraduate Studies",
    isExOfficio: true
  },
].map(async member => ({
  ...member,
  photoURL: await getProfileImage(facultyPhotoLookup[member.name])
})));

const formatMember = (member: ExcomMember) => {
  if (member.isExOfficio) {
    return `${member.name}, ${member.role} (ex-officio)`;
  }
  return member.role ? `${member.name}, ${member.role}` : member.name;
};

const committeeText = `The Robotics Department is led by the Executive Committee: ${excom.map(formatMember).join("; ")}.`;

// Get focus areas collection
const focusAreas = await getCollection('focusAreas');

---

<MainLayout title="About | Michigan Robotics" description="Learn about the University of Michigan Robotics Department's vision and leadership">
  <Breadcrumbs />
  <PageTitle title="About Michigan Robotics" />
<div class="mt-4 mb-4 max-w-6xl w-11/12 mx-auto">
    <div class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-8">
      <section>
        <h2 class="text-3xl font-roboto-condensed font-bold mb-4 text-umichblue dark:text-white">Our mission</h2>
        <p class="text-xl font-semibold text-arboretumBlue dark:text-maize mb-4">Work together. Create smart machines. Serve society.</p>
        <p class="mb-4">Michigan Robotics creates and leads innovative initiatives and robust programs that elevate outcomes for both robotics and roboticists in research, academics, and society. 
        </p>
        <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md mb-6">
          <h3 class="text-xl font-bold mb-2 text-umichblue dark:text-white">Key Facts</h3>
          <ul class="list-disc pl-5">
            <li>Originated as the Robotics Institute in 2014</li>
            <li>Ford Robotics Building completed in 2021</li>
            <li>First undergraduate robotics major among top-ten engineering schools in 2022</li>
            <li>$7.8M in research expenditures in 2023</li>
          </ul>
        </div>
      </section>
      
      <div class="relative rounded-sm overflow-hidden">
        <YouTube 
          id="s4X1PvbHwLY"
          title="This is Michigan Robotics"
          poster="https://i.ytimg.com/vi/s4X1PvbHwLY/maxresdefault.jpg"
        />
      </div>
    </div>

    <section class="mt-12">
      <h2 class="text-3xl font-roboto-condensed font-bold mb-6 text-umichblue dark:text-white">Academics</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md">
          <h3 class="text-xl font-bold mb-2 text-umichblue dark:text-white">
            <a href="/academics/undergraduate" class="flex items-center hover:underline">
              Undergraduate
              <Icon name="mdi:chevron-right" class="h-5 w-5 ml-1" />
            </a>
          </h3>
          <p>167 current robotics majors</p>
          <p>16 alumni</p>
        </div>
        <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md">
          <h3 class="text-xl font-bold mb-2 text-umichblue dark:text-white">
            <a href="/academics/graduate" class="flex items-center hover:underline">
              Graduate
              <Icon name="mdi:chevron-right" class="h-5 w-5 ml-1" />
            </a>
            </a>
          </h3>
          <p>371 current Master's and PhD students</p>
          <p>Program started in 2014</p>
        </div>
        <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md">
          <h3 class="text-xl font-bold mb-2 text-umichblue dark:text-white">
            <a href="/academics/courses" class="flex items-center hover:underline">
              Robotics courses
              <Icon name="mdi:chevron-right" class="h-5 w-5 ml-1" />
            </a>
            </a>
          </h3>
          <p>12 new undergraduate robotics courses</p>
          <p>Several courses freely available online</p>
        </div>
      </div>
    </section>
    <section class="mt-12">
      <h2 class="text-3xl font-roboto-condensed font-bold mb-6 text-umichblue dark:text-white">
        <a href="/research/focus-areas" class="flex items-center hover:underline">
          Research focus areas
          <Icon name="mdi:chevron-right" class="h-5 w-5 ml-1" />
        </a>
      </h2>
      <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-3">
        {focusAreas.map((area) => (
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm hover:shadow-md transition-shadow hover:scale-105">
            <a href={`/research/focus-areas/${area.id}`} class="block p-2">
              <Image
                src={area.data.image?.src}
                alt={`${area.data.title} research`}
                class="w-full h-24 object-cover rounded-t-lg mb-2"
                width={200}
                height={150}
              />
              <span class="text-sm font-medium">{area.data.title}</span>
            </a>
          </div>
        ))}
      </div>
    </section>

    <section class="mt-12">
      <h2 class="text-3xl font-roboto-condensed font-bold mb-6 text-umichblue dark:text-white">Impact and innovation</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div>
            <h3 class="text-xl font-bold mb-4 text-umichblue dark:text-white">Open-source projects</h3>
            <p class="mb-4">Michigan researchers regularly publish and share their work with the community, including:</p>
            <ul class="list-disc pl-5 pb-4">
              <li><a href="https://mbot.umich.edu/" class="text-arboretumBlue dark:text-maize hover:underline">MBot</a>: an educational robot platform, more than 300 of are used by our undergrad and grad students</li>
              <li><a href="https://opensourceleg.org/" class="text-arboretumBlue dark:text-maize hover:underline">Open-Source Leg</a>: a bionic prosthetic leg</li>
              <li><a href="https://robotics.umich.edu/research/projects-and-datasets/" class="text-arboretumBlue dark:text-maize hover:underline">Data sets</a>: from underwater sonar scans to pedestrian paths for autonomous vehicles</li>
            </ul>
              <a href="/research/projects-and-datasets/" class="inline-flex items-center px-4 py-2 mb-4 bg-umichblue dark:bg-arboretumBlue text-white rounded-sm hover:bg-opacity-90 transition-colors">
                Open-Source Projects
                  <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
          </div>
        <div>
          <h3 class="text-xl font-bold mb-4 text-umichblue dark:text-white">Engagement</h3>
          <p class="mb-4">We partner with industry, academic, and community organizations through research collaborations, recruiting, and student projects.</p>
          <a href="/partnerships/" class="inline-flex items-center px-4 py-2 mb-4 bg-umichblue dark:bg-arboretumBlue text-white rounded-sm hover:bg-opacity-90 transition-colors">
            Academic & community partners
              <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
          <p class="mb-4">Our <a href="/partnerships/industry" class="text-arboretumBlue dark:text-maize hover:underline">corporate engagement pathways</a> range from sponsoring student teams to establishing research centers.</p>
          <a href="/partnerships/industry" class="inline-flex items-center px-4 py-2 mb-4 bg-umichblue dark:bg-arboretumBlue text-white rounded-sm hover:bg-opacity-90 transition-colors">
            Industry engagement
              <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
          </div>
        <div>
          <h3 class="text-xl font-bold mb-4 text-umichblue dark:text-white">Faculty-Led Spin-offs</h3>
          <ul class="list-disc pl-5 pb-4">
            <li>May Mobility: Driverless transit in communities</li>
            <li>Voxel51: Computer vision data and modeling</li>
            <li>Refraction AI: Automated last-mile delivery</li>
            <li>Precision 3D: Advanced printing</li>
            <li>NewHaptics: Haptic display for the blind</li>
          </ul>
          <p class="mb-4">The University of Michigan has a long history of developing innovative solutions and products through Innovation Partnerships.</p>
          <a href="https://available-inventions.umich.edu/products/robotics" class="inline-flex items-center px-4 py-2 mb-4 bg-umichblue dark:bg-arboretumBlue text-white rounded-sm hover:bg-opacity-90 transition-colors">
            View new projects
              <Icon class="ml-2 w-5 h-5" name="mdi:open-in-new" />
          </a>
        </div>
      </div>
    </section>

    <section class="mt-12">
      <h2 class="text-3xl font-roboto-condensed font-bold mb-6 text-umichblue dark:text-white">Leadership</h2>
      <div class="bg-white dark:bg-gray-800 rounded-sm shadow-md overflow-hidden">

        <!-- Photo rows -->
        <div class="flex flex-wrap justify-center mb-2">
          {excom.map((member) => (
            <div class={`w-24 text-center md:w-48`}>
              <Image 
                src={member.photoURL}
                alt={member.name}
                width={200}
                height={200}
                class={`w-full h-24 md:h-48 object-cover ${
                  member.name === "Brent Gillespie" 
                    ? "object-[100%_0%] md:object-right"
                    : member.name === "Leia Stirling"
                      ? "object-[68%_0%] md:object-right" 
                      : "object-center"
                }`}
              />
            </div>
          ))}
        </div>

      <!-- Description text -->
      <p class="text-center text-gray-600 dark:text-gray-300 mx-auto p-2 pb-6">
      {committeeText}
      </p>
    </section>

  <section class="mt-12 mb-12">
    <h2 class="text-3xl font-roboto-condensed font-bold mb-6 text-umichblue dark:text-white">Contact Us</h2>
    <div class="bg-white dark:bg-gray-800 rounded-sm shadow-md p-6">
      <p class="text-gray-600 dark:text-gray-300 mb-4">Have questions about Michigan Robotics? We'd love to hear from you.</p>
      <a href="about/contact" class="inline-flex items-center px-4 py-2 bg-umichblue dark:bg-arboretumBlue text-white rounded-sm hover:bg-opacity-90 transition-colors">
        Get in touch
        <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
        </svg>
      </a>
    </div>
  </section>
  </div>
</MainLayout>
