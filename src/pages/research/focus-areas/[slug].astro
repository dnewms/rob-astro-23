---
import Layout from '../../../layouts/MainLayout.astro';
import { getCollection, render } from 'astro:content';
import { Image } from 'astro:assets';
import ContentImage from '../../../components/ContentImage.astro';
import Breadcrumbs from "../../../components/Breadcrumbs.astro";

import { focusAreas } from '../../../content/focus-areas/focusAreas';

export async function getStaticPaths() {
  const focusAreaEntries = await getCollection('focusAreas');
  return focusAreas.map(area => {
    const content = focusAreaEntries.find(entry => entry.data.slug === area.slug);
    return {
      params: { slug: area.slug },
      props: { area, content }
    };
  });
}

const { area, content } = Astro.props;

let Content;
if (content) {
  const rendered = await render(content);
  Content = rendered.Content;
}

const allAreaPosts = await getCollection('news', ({ data }) => {
  if (!data.categories) return false;
  return data.categories.some(category => {
    if (!category) return false;
    return category.toLowerCase().includes(area.slug.toLowerCase()) ||
           area.slug.toLowerCase().includes(category.toLowerCase());
  });
});

const relatedPosts = allAreaPosts
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
---

<Layout title={area.title}>
  <div class="max-w-6xl w-11/12 mx-auto py-2">
    <Breadcrumbs />
  </div>
  <div class="max-w-6xl w-11/12 mx-auto pt-4 pb-12">
    <div class="relative rounded-lg overflow-hidden shadow-2xl">
      <div class="absolute inset-0">
        <Image 
          src={area.image}
          alt={area.imageAlt || area.title}
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-gradient-to-r from-gray-900 via-gray-900/70 to-transparent" />
      </div>
      
      <div class="relative px-8 py-16">
        <h1 class="text-5xl font-bold text-white mb-4">
          {area.title}
        </h1>
        <p class="text-xl text-gray-200 max-w-2xl">
          {area.description}
        </p>
      </div>
    </div>
    <div class="max-w-6xl mx-auto mt-12">
      <article class="prose prose-lg dark:prose-invert max-w-none">
        {Content ? <Content /> : (
          <p>No additional content available for this focus area.</p>
        )}

        {/* Related News Section */}
        {relatedPosts.length > 0 && (
          <div class="mt-12">
            <h2 class="text-2xl font-bold mb-4 font-roboto-condensed dark:text-white">Related news</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
              {relatedPosts.map(async (post) => {
                return (
                  <a href={`${import.meta.env.BASE_URL}/news/${post.slug}`} class="group no-underline">
                    <div class="relative aspect-video overflow-hidden rounded-sm shadow-lg">
                      <ContentImage 
                        src={post.data.image?.src}
                        alt={post.data.image?.alt || post.data.title}
                        width={800}
                        height={450}
                        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                      />
                    </div>
                    <div class="p-4">
                      <h3 class="not-prose text-lg font-medium group-hover:decoration-maize group-hover:decoration-2 group-hover:underline">
                        {post.data.title}
                      </h3>
                    </div>
                  </a>
                );
              })}
            </div>
          </div>
        )}
      </article>
    </div>
  </div>
</Layout>
