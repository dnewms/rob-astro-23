---
import { Image } from 'astro:assets';

interface Props {
  image?: {
    src: ImageMetadata;
    alt: string;
  };
  link?: {
    url: string;
    text: string;
  };
  heading?: string;
}

const { image, link, heading } = Astro.props;
---

<div class="flex flex-col md:flex-row gap-8 my-8 items-start">
  {image && (
    <div class="md:w-1/2">
      <Image 
        src={image.src} 
        alt={image.alt}
        class="w-full rounded-sm shadow-md"
      />
    </div>
  )}
  <div class="md:w-1/2">
    {heading && <h2 class="text-2xl font-bold mb-4">{heading}</h2>}
    {link && (
      <a href={link.url} class="text-umichblue hover:text-arboretumBlue dark:text-taubmanTeal dark:hover:text-maize">
        {link.text}
      </a>
    )}
    <div class="mt-4">
      <slot />
    </div>
  </div>
</div> 