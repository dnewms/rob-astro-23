---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  imageSlot?: 'left' | 'right';
}

const { imageSlot = 'right' } = Astro.props;
---

<div class={`flex flex-col ${imageSlot === 'right' ? 'md:flex-row' : 'md:flex-row-reverse'} gap-8 my-8`}>
  <div class="md:w-2/3 prose dark:prose-invert max-w-none">
    <slot name="text" />
  </div>
  <div class="md:w-1/3">
    <slot name="image" />
  </div>
</div> 