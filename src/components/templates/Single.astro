---
const { node } = Astro.props;

// Format date helper function
function formatDate(dateString) {
  return new Date(dateString).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}
---

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">


  <!-- Title -->
  <h1 class="text-4xl font-roboto-condensed font-bold mb-4 md:mt-4 leading-tight">
    {node.title}
  </h1>

  <!-- Date and Author -->
  {(node.date || node.author) && (
    <p class="italic font-sans text-gray-600 dark:text-gray-400 mb-6 text-sm flex items-center">
      <span class="flex-grow border-t border-maize mr-4"></span>
      <span class="flex items-center gap-1 dark:text-gray-100">
        {node.date && (
          <time datetime={node.date}>
            {formatDate(node.date)}
          </time>
        )}
        {node.author && (
          <>
            {" by "}
            <span class="font-medium text-gray-900 dark:text-gray-100">
              {node.author.node?.name || node.author}
            </span>
          </>
        )}
      </span>
      
    </p>
  )}
  <!-- Featured Image -->
  {node.featuredImage?.node?.mediaItemUrl && (
    <figure class="mb-4">
      <img
        class="w-full h-auto rounded-sm shadow-lg"
        src={node.featuredImage.node.mediaItemUrl}
        srcset={node.featuredImage.node.srcSet}
        alt={node.featuredImage.node.altText || ''}
        loading="lazy"
        width={node.featuredImage.node.mediaDetails?.width}
        height={node.featuredImage.node.mediaDetails?.height}
      />
      {node.featuredImage.node.caption && (
        <figcaption class="mt-2 text-sm text-gray-600 dark:text-gray-400 italic">
          {node.featuredImage.node.caption}
        </figcaption>
      )}
    </figure>
  )}

  <!-- Article Content -->
  <article 
    class="prose prose-lg max-w-none mb-4 dark:prose-invert
    prose-headings:font-roboto-condensed
    prose-p:font-sans prose-p:leading-relaxed
    prose-img:rounded-sm prose-img:shadow-md"
  >
    {node.content ? (
      <div set:html={node.content} />
    ) : (
      <slot name="content" />
    )}
  </article>

    <!-- Categories -->
    <div class="mb-4">
        {node.categories && 
          node.categories.nodes.map(category => (
            <a 
              href={category.uri} 
              class="inline-block text-xs font-medium mr-2 px-2.5 py-0.5 rounded bg-arboretumBlue text-white hover:bg-umichblue transition-colors"
            >
              {category.name}
            </a>
          ))
        }
      </div>
</div>

<style is:global>
  .wp-block-image img {
    width: 100%;
    height: auto;
    margin: 1rem 0;
  }
    
  .prose figure figcaption {
    text-align: center;
    font-style: italic;
    color: #666;
  }
  
  @media (prefers-color-scheme: dark) {
    .prose figure figcaption {
      color: #c6cad2;
    }
  }

  /* Handle duplicate images via CSS instead */
  .prose img[src$="${node.featuredImage?.node?.mediaItemUrl}"] {
    display: none;
  }
</style>
