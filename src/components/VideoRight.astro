---
import { YouTube } from 'astro-embed';

interface Props {
  url: string;
  caption?: string;
  class?: string;
}

const { url, caption, class: className } = Astro.props;
---
<figure class={`block w-full aspect-video mb-8 lg:float-right lg:w-[400px] lg:ml-8 ${className}`}>
  <YouTube 
  id={url} 
  class="w-full h-full" 
  playsInline={true} 
  params={{
      rel: 0,
      modestbranding: 1,
      playsinline: 1,
      controls: 1
    }}
  />
  {caption && (
    <figcaption class="mt-3.5 text-[0.875em] leading-[1.4285714] text-gray-600 dark:text-gray-200 italic">
      {caption}
    </figcaption>
  )}
</figure>