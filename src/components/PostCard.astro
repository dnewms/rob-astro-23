---
const { post } = Astro.props;
---

<article class="group max-w-md bg-white border border-gray-200 rounded-sm shadow dark:bg-gray-800 dark:border-gray-700">
    <a class='post-link' href={post.uri} aria-label={post.title}>
        <section>
            <img class="rounded-t-sm"
                src={post?.featuredImage?.node?.mediaItemUrl} 
                alt={post?.featuredImage?.node?.altText}
                srcset={post?.featuredImage?.node?.srcSet}
                loading='lazy'
                width={post?.featuredImage?.node?.mediaDetails?.width}
                height={post?.featuredImage?.node?.mediaDetails?.height}
            >
            <div>
                <div class="p-5 pl-0">
                <h3 class="pl-5 bg-arboretumBlue text-white inline-block pl-5 pr-2 py-1 text-2xl font-bold tracking-tight text-gray-900 dark:text-white group-hover:underline decoration-maize">{post.title}</h3>   
                </div>
                <div class="px-5 mb-3 text-sm italic text-gray-700 dark:text-gray-100"><time datetime={post.date}>{new Date(post.date).toLocaleDateString()}</time></div> 
                <div class="px-5 pb-5 mb-3 font-normal text-gray-700 dark:text-gray-100"><p set:html={post.excerpt}"></p></div>
            </div>
        </section>
    </a>
</article>

