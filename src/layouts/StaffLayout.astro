---
import Layout from './MainLayout.astro';
import { Image } from 'astro:assets';
const { staff } = Astro.props;
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

// Fetch all news posts
const allPosts = await getCollection('news');

// Filter posts tagged with the staff member's full name
const relatedPosts = allPosts
  .filter(post => post.data.tags?.includes(staff.fullName))
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());

// Import all images
const images = import.meta.glob<{ default: ImageMetadata }>('/src/content/**/*.{jpeg,jpg,png,gif}');

async function getNewsImage(post: CollectionEntry<'news'>) {
  if (!post.data.image?.src) return null;
  
  try {
    const imagePath = `/src/content${post.data.image.src.replace('../content', '')}`;
    if (imagePath in images) {
      const image = await images[imagePath]();
      return image.default;
    }
    return null;
  } catch (error) {
    console.error('Error in getNewsImage:', error);
    return null;
  }
}
---

<Layout title={staff?.preferredName && staff?.lastName ? `${staff.preferredName} ${staff.lastName} - Staff Profile` : 'Staff Profile'}>
  {staff ? (
    <main class="mt-4 max-w-4xl mx-auto py-8 px-4 font-roboto text-PumaBlack dark:text-white bg-white dark:bg-umichblue">
      <div class="grid md:grid-cols-3 gap-8">
        <!-- Profile Photo -->
        <div class="md:col-span-1">
          {staff.photoURL && (
            <img
              src={staff.photoURL}
              alt={staff.fullName}
              class="w-full rounded-sm shadow-lg"
            />
          )}
        </div>
        
        <!-- Staff Details -->
        <div class="md:col-span-2">
          <h1 class="text-4xl font-bold mb-2 font-roboto-condensed">{staff.fullName}</h1>
          <p class="text-xl text-arboretumBlue dark:text-taubmanTeal mb-4">{staff.title}</p>
          
          <!-- Contact Info -->
          <div class="mb-6 space-y-4">
            {staff.email && (
              <p class="flex flex-col">
                <span class="font-bold text-xs uppercase tracking-wider text-gray-600 dark:text-gray-300">Email</span> 
                <a href={`mailto:${staff.email}`} class="hover:underline text-lg">
                    {staff.email}
                </a>
              </p>
            )}
            {staff.phone && (
              <p class="flex flex-col">
                <span class="font-bold text-xs uppercase tracking-wider text-gray-600 dark:text-gray-300">Phone</span>
                <span class="text-lg"> {staff.phone}</span>
              </p>
            )}
            {staff.office && (
              <p class="flex flex-col">
                <span class="font-bold text-xs uppercase tracking-wider text-gray-600 dark:text-gray-300">Office</span>
                <span class="text-lg"> {staff.office}</span>
              </p>
            )}
            {staff.profileSummary && (
              <div class="flex flex-col mt-6">
                <span class="font-bold text-sm uppercase tracking-wider text-gray-600 dark:text-gray-300 mb-2">About</span>
                <p class="text-base leading-relaxed"> {staff.profileSummary}</p>
              </div>
            )}
          </div>
        </div>
      </div>

      {/* Related News Section */}
      {relatedPosts.length > 0 && (
        <div class="mt-12">
          <h2 class="text-2xl font-bold mb-4 font-roboto-condensed dark:text-white">Related news</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            {relatedPosts.map(async (post) => {
              const image = await getNewsImage(post);
              
              return (
                <a href={`${import.meta.env.BASE_URL}/news/${post.slug}`} class="group">
                  {image && (
                    <div class="aspect-video overflow-hidden">
                      <Image 
                        src={image}
                        alt={post.data.image?.alt || post.data.title}
                        width={800}
                        height={450}
                        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                      />
                    </div>
                  )}
                  <div class="p-4">
                    <h3 class="text-lg font-medium decoration-maize decoration-2 group-hover:underline">
                      {post.data.title}
                    </h3>
                  </div>
                </a>
              );
            })}
          </div>
        </div>
      )}
    </main>
  ) : (
    <p class="text-center text-angellHallAsh dark:text-burtonTowerBeige">Error loading staff data...</p>
  )}
</Layout>
