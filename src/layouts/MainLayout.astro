---
import '../styles/global.css';
import SiteNav from "../components/SiteNav.astro"; 
import SiteFooter from "../components/SiteFooter.astro";
import { SEO } from 'astro-seo';


interface Props {
	title: string;
	description?: string;
	image?: string;
}

const { 
	title,
	description = "Work together. Create smart machines. Serve society.",
	image = "/social/og-default.jpg"  // default fallback image
} = Astro.props;

const siteUrl = "https://robotics.umich.edu";

---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<link rel="sitemap" href="/sitemap-index.xml" />

		<slot name="head"/>
		<SEO
			title={title}
			description={description}
			openGraph={{
				basic: {
					title,
					type: "website",
					image: `${siteUrl}${image}`,
				},
				optional: {
					description,
					siteName: "Michigan Robotics",
					locale: "en_US",
				},
				image: {
					alt: "Michigan Robotics",
					width: 1200,
					height: 630,
					type: "image/jpeg",
				}
			}}
			twitter={{
				card: "summary_large_image",
				site: "@UMRobotics",
				title,
				description,
				image: `${siteUrl}${image}`,
			}}
			extend={{
				meta: [
					{
						name: 'keywords',
						content: 'robotics, michigan, engineering, research, education'
					}
				],
				jsonLd: {
					"@context": "https://schema.org",
					"@type": "Department",
					"name": "University of Michigan Robotics Department",
					"url": siteUrl,
					"logo": `${siteUrl}/images/logo.png`,
					"parentOrganization": [{
						"@type": "CollegeOrUniversity",
						"name": "University of Michigan College of Engineering",
						"parentOrganization": {
							"@type": "University",
							"name": "University of Michigan"
						}
					}],
					"description": "The Robotics Department at the University of Michigan College of Engineering: working together to create smart machines and serve society.",
					"areaServed": "Ann Arbor, Michigan"
				}
			}}
		/>
		<link 
			rel="preload" 
			href="/fonts/fonts.css" 
			as="style" 
			onload="this.onload=null;this.rel='stylesheet'"
			crossorigin="anonymous"
		>
		<script is:inline>
			document.documentElement.classList.add('is-loading');
		  </script>
		<noscript>
			<link rel="stylesheet" href="/fonts/fonts.css">
		</noscript>
	</head>
	<body class="bg-gray-100 dark:bg-gray-700 dark:text-neutral-50">
		<main class="m-auto mb-20">
			<SiteNav></SiteNav>
			<slot></slot>
		</main>
		<SiteFooter></SiteFooter>
	</body>
	<script is:inline>
		window.addEventListener('load', () => {
		  document.documentElement.classList.remove('is-loading');
		});
	  </script>
		<script 
			data-goatcounter="https://robotics-umich-edu.goatcounter.com/count"
			async 
			src="//gc.zgo.at/count.js"
			fetchpriority="low"
		></script>
</html>