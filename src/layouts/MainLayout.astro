---
import SiteNav from "../components/SiteNav.astro"; 
import SiteFooter from "../components/SiteFooter.astro";
// import { navQuery } from "../lib/api";
import { SEO } from 'astro-seo';

// const { menus, generalSettings } = await navQuery();
// const primaryMenu = menus.nodes[0];

interface Props {
	title: string;
	description?: string;
	image?: string;
}

const { 
	title,
	description = "Work together. Create smart machines. Serve society.",
	image = "../public/social/og-default.jpg"  // default fallback image
} = Astro.props;

const siteUrl = "https://robotics.umich.edu";

---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="robots" content="noindex, nofollow">
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<slot name="head"/>
		<SEO
			title={title}
			description={description}
			openGraph={{
				basic: {
					title,
					type: "website",
					image: `${siteUrl}${image}`,
				},
				optional: {
					description,
					siteName: "Michigan Robotics",
					locale: "en_US",
				},
				image: {
					alt: "Michigan Robotics featured image",
					width: 1200,
					height: 630,
					type: "image/jpeg",
				}
			}}
			twitter={{
				card: "summary_large_image",
				site: "@UMRobotics",
				title,
				description,
				image: `${siteUrl}${image}`,
			}}
			extend={{
				meta: [
					{
						name: 'keywords',
						content: 'robotics, michigan, engineering, research, education'
					}
				],
				jsonLd: {
					"@context": "https://schema.org",
					"@type": "Department",
					"name": "University of Michigan Robotics Department",
					"url": siteUrl,
					"logo": `${siteUrl}/images/logo.png`,
					"parentOrganization": [{
						"@type": "CollegeOrUniversity",
						"name": "University of Michigan College of Engineering",
						"parentOrganization": {
							"@type": "University",
							"name": "University of Michigan"
						}
					}],
					"description": "The Robotics Department at the University of Michigan College of Engineering, conducting cutting-edge robotics research and education",
					"areaServed": "Ann Arbor, Michigan"
				}
			}}
		/>
		<link rel="stylesheet" href="/fonts/fonts.css">
	</head>
	<body class="bg-gray-100 dark:bg-gray-700 dark:text-white">
		<main class="m-auto mb-20">
			<SiteNav></SiteNav>
			<slot></slot>
		</main>
		<SiteFooter></SiteFooter>
	</body>
</html>


  
  <style is:global>
	.wp-block-columns{
		gap:2em;
	}
	.wp-block-button__link{
		text-decoration:none;
	}
	.wp-block-button__link:hover{
		text-decoration:underline;
	}
	.wp-block-embed-youtube{
		margin: 1em 0;
	}
	html {
		font-display: swap;
	}
	header {
		min-height: 4rem;
	}
	h1, h2, h3, .font-roboto {
		font-display: swap;
	}

</style>
