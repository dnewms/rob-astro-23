---
import Layout from './MainLayout.astro';
import { Image } from 'astro:assets';
const { faculty } = Astro.props;
import { getCollection } from 'astro:content';

// Fetch all news posts
const allPosts = await getCollection('news');

// Filter posts tagged with the faculty member's full name
const relatedPosts = allPosts.filter(post => 
  post.data.tags?.includes(faculty.fullName)
);

// Import images dynamically
const images = import.meta.glob('/src/content/news/**/*.{jpeg,jpg,png,gif}');
---

<Layout title={faculty?.preferredName && faculty?.lastName ? `${faculty.preferredName} ${faculty.lastName} - Faculty Profile` : 'Faculty Profile'}>
  {faculty ? (
    <main class="mt-4 max-w-4xl mx-auto py-8 px-4 font-roboto text-PumaBlack dark:text-white bg-white dark:bg-umichblue">
      <div class="grid md:grid-cols-3 gap-8">
        <!-- Profile Photo -->
        <div class="md:col-span-1">
          {faculty.photoURL && (
            <img
              src={faculty.photoURL}
              alt={faculty.fullName}
              class="w-full rounded-sm shadow-lg"
            />
          )}
        </div>
        
        <!-- Faculty Details -->
        <div class="md:col-span-2">
          <h1 class="text-4xl font-bold mb-2 font-roboto-condensed">{faculty.fullName}</h1>
          <p class="text-xl text-arboretumBlue dark:text-taubmanTeal mb-4">{faculty.title}</p>
          
          <!-- Contact Info -->
          <div class="mb-6 space-y-4">
            {faculty.email && (
              <p class="flex flex-col">
                <span class="font-bold text-xs uppercase tracking-wider text-gray-600 dark:text-gray-300">Email</span> 
                <a href={`mailto:${faculty.email}`} class="hover:underline text-lg">
                  {faculty.email}
                </a>
              </p>
            )}
            {faculty.researchInterests && (
              <p class="flex flex-col">
                <span class="font-bold text-xs uppercase tracking-wider text-gray-600 dark:text-gray-300">Research Interests</span>
                <span class="text-lg">{faculty.researchInterests}</span>
              </p>
            )}
          </div>

          <!-- Additional Links -->
          <div class="space-y-4">
            {faculty.googleScholar && (
              <p class="flex flex-col">
                <span class="font-bold text-xs uppercase tracking-wider text-gray-600 dark:text-gray-300">Google Scholar</span>
                <a href={faculty.googleScholar} target="_blank" rel="noopener noreferrer" class="hover:underline text-lg text-rackhamGreen dark:text-maize">
                  View Profile
                </a>
              </p>
            )}
            {faculty.labWebsite && (
              <p class="flex flex-col">
                <span class="font-bold text-xs uppercase tracking-wider text-gray-600 dark:text-gray-300">Lab Website</span>
                <a href={faculty.labWebsite} target="_blank" rel="noopener noreferrer" class="hover:underline text-lg text-rackhamGreen dark:text-maize">
                  Visit Lab Website
                </a>
              </p>
            )}
            {faculty.website && (
              <p class="flex flex-col">
                <span class="font-bold text-xs uppercase tracking-wider text-gray-600 dark:text-gray-300">Personal Website</span>
                <a href={faculty.website} target="_blank" rel="noopener noreferrer" class="hover:underline text-lg text-rackhamGreen dark:text-maize">
                  Visit Personal Website
                </a>
              </p>
            )}
          </div>
        </div>
      </div>

      {/* Related News Section */}
      {relatedPosts.length > 0 && (
        <div class="mt-12">
          <h2 class="text-2xl font-bold mb-4 font-roboto-condensed dark:text-white">Related news</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            {relatedPosts.map(async (post) => {
              const hasImage = post.data.image?.src;
              const imageName = hasImage ? post.data.image.src.replace('images/', '') : null;
              let imagePath = hasImage ? `/src/content/news/${post.data.date.split('-')[0]}/images/${imageName}` : null;
              
              let resolvedImage = null;
              try {
                const imageModule = imagePath ? images[imagePath] : null;
                resolvedImage = imageModule ? await imageModule() : null;
              } catch (error) {
                console.warn(`Failed to load image for post "${post.data.title}":`, error);
                resolvedImage = null;
              }

              return (
                <a href={`/news/${post.slug}`} class="group">
                  <div class="bg-white dark:bg-gray-800 rounded-sm overflow-hidden shadow-md hover:shadow-lg transition-shadow">
                    {resolvedImage && (
                      <div class="aspect-video overflow-hidden">
                        <Image 
                          src={resolvedImage.default}
                          alt={post.data.image?.alt || post.data.title}
                          width={400}
                          height={225}
                          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                        />
                      </div>
                    )}
                    <div class="p-4">
                      <h3 class="text-lg font-medium decoration-maize decoration-2 group-hover:underline">
                        {post.data.title}
                      </h3>
                    </div>
                  </div>
                </a>
              );
            })}
          </div>
        </div>
      )}
    </main>
  ) : (
    <p class="text-center text-angellHallAsh dark:text-burtonTowerBeige">Error loading faculty data...</p>
  )}
</Layout>
